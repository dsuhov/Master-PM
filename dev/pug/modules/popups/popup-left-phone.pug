include ../components/input-field
include ../buttons/buttons

-
  var popupLeftPhoneData = {
    type: 'tel',
    id: 'popup-photo-inpphone',
    classModifier: 'popup-phone input-field--grey-border input-field--popup input-field--64',
    placeholder: '+7 (___) ___-__-__'
  }

#popup-left-phone.popup-hidden
  .popup-container
    .popup
      .popup__close
        include ../components/close-btn
      .popup-photo
        .popup-photo__pic-block
          .popup-photo__name.futpt-demi-24-31 Александр Петров
          .popup-photo__position.futpt-normal-18-23 Руководитель отдела <br>по внедрению СУП <br>компании Мастер-М
        .popup-photo__inner
          .popup-photo__title.popup__title Оставьте ваш <span class="em-blue">телефон</span>
          .popup-photo__subtitle
            .popup-photo__little-pic(data-bg="url('static/images/general/ns-man_small.jpg')").lazyBg
            .popup__subtitle Я перезвоню в удобное для вас время и <br>отвечу на все интересующие вопросы.
          form(action="" method="post" id="popup-photo-form").popup-photo__form
            .popup-photo__choose-time-radio
              include choose-time-radio
            .popup-photo__choose-time-field.popup-mb20
              include time-field
            .popup-photo__phone-field.popup-mb20
              +input-field(popupLeftPhoneData)
            .popup-photo__submit-btn
              +turquoise-btn-72-submit('заказать звонок', 'left-phone-popup-submit', '', true)
            .popup-photo__accept-conf
              include ../components/popup-accept-conf