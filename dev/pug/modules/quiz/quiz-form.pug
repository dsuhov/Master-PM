include ../components/input-field
include ../buttons/buttons

-
  var quizInputData = {
    type: 'tel',
    id: 'quiz-form-tel-input',
    classModifier: '64 input-field--simple-border input-field--white input-field--gbold',
    placeholder: '+7 (___) ___-__-__'
  }

mixin radioBtn(text, name, checked)
  label.quiz-form__radio-btn
    if checked
      input(type="radio" name=""+name value=""+text checked).quiz-form__radio-input
    else
      input(type="radio" name=""+name value=""+text).quiz-form__radio-input
    .quiz-form__radio-pimp
    span.quiz-form__q-text.futpt-normal-18-25-tuna= text

mixin checkBoxBtn(text, name)
  label.quiz-form__checkbox-btn
    input(type="checkbox" name=""+name value=""+text).quiz-form__checkbox-input
    .quiz-form__checkbox-pimp
      +icon('blue-checkbox')
    .quiz-form__checkbox-pimp.quiz-form__checkbox-pimp--checked
      +icon('blue-checkbox-ckecked')
    span.quiz-form__q-text.futpt-normal-18-25-tuna= text

mixin companyCkeckbox(name, logoSrc, alt)
  label.quiz-form__company-btn
    input(type="checkbox" name=""+name value=""+alt).quiz-form__company-input
    .quiz-form__company-logo
      img(src="" data-src=`static/images/test/${logoSrc}.png` alt=""+alt).lazyBg

mixin whiteRadio(text, name, checked)
  label.whiteRadioBtn
    if checked
      input(type="radio" name=""+name value=""+text checked).whiteRadioBtn__radio-input
    else
      input(type="radio" name=""+name value=""+text).whiteRadioBtn__radio-input
    .whiteRadioBtn__radio-pimp
    span.whiteRadioBtn__q-text.futpt-normal-18-25= text

form(action="" method="post" id="quiz-form").quiz-form
  .quiz-form__main
    .quiz-form__pane
      .quiz-form__q-block
        .quiz-form__heading Сколько печатающих <br>устройств в компании?
        .quiz-form__radio-group
          +radioBtn('До 5', 'How many printing devices?', true)
          +radioBtn('5-10', 'How many printing devices?', false)
          +radioBtn('10-20', 'How many printing devices?', false)
          +radioBtn('20-50', 'How many printing devices?', false)
          +radioBtn('Более 50', 'How many printing devices?', false)
          +radioBtn('Не знаю', 'How many printing devices?', false)
      .quiz-form__q-block
        .quiz-form__heading Сколько сотрудников <br>в компании пользуются <br>печатью?
        .quiz-form__radio-group.quiz-form__radio-group--2-column
          +radioBtn('До 5', 'How many employees use printing?', false)
          +radioBtn('5-10', 'How many employees use printing?', false)
          +radioBtn('10-20', 'How many employees use printing?', false)
          +radioBtn('20-50', 'How many employees use printing?', false)
          +radioBtn('100-500', 'How many employees use printing?', false)
          +radioBtn('Не знаю', 'How many employees use printing?', false)
        .quiz-form__q-block
