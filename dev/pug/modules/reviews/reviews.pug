                li.rev-block__nav-item.lazyBg(data-bg="url('static/images/reviews/ashan.png')")
                li.rev-block__nav-item.lazyBg(data-bg="url('static/images/reviews/decathlon.png')")
                li.rev-block__nav-item.lazyBg(data-bg="url('static/images/reviews/avon.png')")
            .rev-block__main
              .rev-block__slider#rev-block-slider
                each item in reviewsDataArray
                  +rev-block-slide(item)
